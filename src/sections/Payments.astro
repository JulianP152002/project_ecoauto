---
import { Image } from "astro:assets";
import Nequi from '../../public/imgs/Nequi.svg'
import Daviplta from '../../public/imgs/daviplata.png'
import Bancolombia from '../../public/imgs/logobancolombia.svg'
import Davivienda from '../../public/imgs/davivienda.png'
import Tarject from '../../public/imgs/tajectdebit.svg'

---

<h2 class="  m-auto text-center mt-20 text-yellow-500 font-bold text-5xl">Metodos de Pago</h2>

<section
    class="grid_tecnologia fondo bg-white dark:bg-zinc-800 lg:max-w-4xl lg-ml-auto mg:flex mg:w-full md:w-full md:flex md:justify-center md:items-center"
>



    <div class="tecnologias_container">
        <div class="content">
            <Image class="img" src={Nequi} alt="icono de Nequi" title="metodo de pago cda eoauto tunja" />
            <Image class="img" src={Daviplta} alt="icono de Daviplata" title="metodo de pago cda eoauto tunja" />
            <Image class="img" id="col" src={Bancolombia} alt="icono de Bamcolombia" title="metodo de pago cda eoauto tunja"  />
            <Image class="img" src={Davivienda} alt="icono de Davivienda" title="metodo de pago cda eoauto tunja"  />
            <Image class="img" src={Tarject} alt=" icono de Tarjeta debito"  title="metodo de pago cda eoauto tunja" />

        </div>
    </div>
    <div class="tecnologias_container tecnologias_container-margin ">
        <div class="content">
            <Image class="img" src={Nequi} alt="icono de Nequi" title="metodo de pago cda eoauto tunja" />
            <Image class="img" src={Daviplta} alt="icono de Daviplata" title="metodo de pago cda eoauto tunja" />
            <Image class="img" id="col" src={Bancolombia} alt="icono de Bamcolombia" title="metodo de pago cda eoauto tunja"  />
            <Image class="img" src={Davivienda} alt="icono de Davivienda" title="metodo de pago cda eoauto tunja"  />
            <Image class="img" src={Tarject} alt=" icono de Tarjeta debito"  title="metodo de pago cda eoauto tunja" />
        </div>
    </div>
    <div class="tecnologias_container tecnologias_container-margin ">
        <div class="content">
            <Image class="img" src={Nequi} alt="icono de Nequi" title="metodo de pago cda eoauto tunja" />
            <Image class="img" src={Daviplta} alt="icono de Daviplata" title="metodo de pago cda eoauto tunja" />
            <Image class="img" id="col" src={Bancolombia} alt="icono de Bamcolombia" title="metodo de pago cda eoauto tunja"  />
            <Image class="img" src={Davivienda} alt="icono de Davivienda" title="metodo de pago cda eoauto tunja"  />
            <Image class="img" src={Tarject} alt=" icono de Tarjeta debito"  title="metodo de pago cda eoauto tunja" />
        </div>
    </div>



    <style>
        .tecnologias_container-margin {
            margin-left: 1rem;
        }
        .content {
            display: flex;
        }
        .tecnologias_container {
            padding: 2rem;
            animation: 20s animacion infinite linear;
            display: flex;

        }
        .grid_tecnologia {
            display: flex;
            position: relative;
            width: 90%;
            margin: auto;
            overflow: hidden;

            padding: 1.5rem 2rem;
            border-radius: 2rem;
            white-space: nowrap;
            transition: all 400ms ease;

        }

        .fondo::before,
        .fondo::after {
            content: "";
            position: absolute;
            top: 0;
            width: 10rem;
            height: 100%;
            z-index: 5;
        }
        .fondo::before {
            left: 0;
            background: linear-gradient(
                to left,
                rgba(255, 255, 255, 0),
                #ffffff
            );
        }


        .fondo::after {
            right: 0;
            background: linear-gradient(
                to right,
                rgba(255, 255, 255, 0),
                #ffffff
            );
        }

        .dark::before,
        .dark::after {
            content: "";
            position: absolute;
            top: 0;
            width: 10rem;
            height: 100%;
            z-index: 5;
        }
        .dark::before {
            left: 0;
            background: linear-gradient(
                to left,
                rgba(255, 255, 255, 0),
                #111
            );
        }


        .dark::after {
            right: 0;
            background: linear-gradient(
                to right,
                rgba(255, 255, 255, 0),
                #111
            );
        }



        .grid_tecnologia:hover .tecnologias_container {
            animation-play-state: paused;
        }

        @keyframes animacion {
            from {
                transform: translateX(0);
            }

            to {
                transform: translateX(-190%);
            }
        }

        .img {
            max-width: 8rem;
            max-height: 8rem;
            margin: 0 3.5rem;
            min-height: 8rem;
            min-width: 8rem;
            transition: all 200ms ease-in-out;
        }

    </style>
</section>

</section>