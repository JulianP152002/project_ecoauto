---
import { Image } from "astro:assets";
import Car from "../../public/imgs/M3COMPETITON.webp";
---

<section
    class="header h-[50rem] md:h-[40rem] overflow-hidden p-10 z-0 relative m-auto w-full flex justify-center items-center xm:mp-2"
>
    <div class="flex flex-col items-center justify-center xm:mt-8">
        <h2
            class="title mb-8 mt-12 text-7xl font-bold text-yellow-400 flex items-center content-center xx:text-6xl xm:m-auto xm:hidden"
        >
            NUESTROS SERVICIOS
        </h2>
        <h4
            class="mb-16 title text-6xl text-center text-balance 2xl:text-wrap font-semibold text-yellow-50 xm:mt-6"
        >
            La mejor Revision Tecnicomecanica cde mejor calidad en Tunja
        </h4>
        <a 
            target="black "
            href="https://api.whatsapp.com/send?phone=573173333330&text=Hola%20CDA%20ECOAUTO%2C%20quisiera%20m%C3%A1s%20informaci%C3%B3n%20de%20la%20revisi%C3%B3n%20t%C3%A9cnico%20mec%C3%A1nica%2C%20gracias%20%F0%9F%99%8F%F0%9F%8F%BC%20">
            <button
                class="rounded-3xl text-2xl hover:scale-110 hover:shadow-2xl transition ease-in-out duration-300 px-8 py-6"
            >
                Cotiza tu Revisi√≥n
            </button>
        </a>
    </div>

    <div class="md:hidden content_right">
        <div class="content-right_horario md:-mt-48-">
            <h3 class="horario_title">Horario</h3>
            <p class="horario_days mt-1">
                Lun-Vie <span class="horario_hour horario_hour-1"
                    >07:00AM-07:00PM</span
                >
            </p>
            <p class="horario_days mt-1">
                Sabados <span class="horario_hour horario_hour-1"
                    >07:00AM-06:00PM</span
                >
            </p>
            <p class="horario_days mt-1">
                Domin-Fest<span class="horario_hour horario_hour-1"
                    >08:00AM-03:00 PM</span
                >
            </p>

        </div>
        <Image
        class="content-right_img"
        src={Car}
        id="car"
        alt="imagen vehiculo"
        title="header cda ecoauto tunja"
    />
    </div>
</section>

<style>
    .title {
        filter: drop-shadow(7px 24px 22px #000000);
    }
    button {
        background-color: #ffe53b;
        background-image: linear-gradient(147deg, #ffe53b 0%, #ae8325 74%);
    }
    .header {
        background-image: url(../../public/imgs/cda.webp);
    }
    .img_primary {
        width: 100%;
        height: 55rem;
    }

    @keyframes hola {
        0% {
            transform: scale(100%);
        }
        100% {
            transform: scale(110%);
        }
    }
    .content_right {
        flex-basis: 40%;
        font-size: 15px;
        align-items: right;
        margin-right: 8rem;
        color: #fff;
    }

    .content-right_horario {
        margin-left: 5rem;
        font-size: 1.2rem;
        position: absolute;
        height: 12rem;
        padding: 1rem 2rem 9rem 1rem;
        margin-top: -8rem;
        background: #fff;
        border-radius: 10px;
        color: black;
        transition: all 300ms ease-in-out;
        animation-name: Horario;
        animation-duration: 2s;
    }

    .horario_title {
        margin-left: 2rem;
        font-style: 7rem;
        font-weight: 700;
    }

    .horario_title::before {
        content: "";
        position: absolute;
        width: 1rem;
        height: 1rem;
        background-color: #008e13;
        border-radius: 50px;
        left: 17px;
        top: 14px;
    }

    .horario_days {
        color: gray;
    }

    .horario_hour {
        color: black;
        font-weight: 500;
    }

    .horario_hour-1 {
        margin-left: 1.5rem;
    }

    .content-right_img {
        width: 700px;
        position: absolute;
        display: block;
        right: -25rem;
        bottom: -7rem;
        transition: all 300ms ease-in-out;
        animation-name: BMW;
        animation-duration: 1.8s;
    }

    @keyframes BMW {
        0% {
            transform: translateX(100%);
            opacity: 0;
        }
        100% {
            transform: translateX(0%);
            opacity: 1;
        }
    }
</style>
