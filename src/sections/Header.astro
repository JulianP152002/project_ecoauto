        </div>
        <div>
			<Image class=' fixxer absolute block bottom-0 right-5 drop-shadow-2xl z-50 w-20 ' src={Wap} alt='logo de whasap'></Image>
		</div>
    <script>
        
        window.onscroll = function hola():any {
            var pocition = window.pageYOffset || document.documentElement.scrollTop
            

            var car:any = document.querySelector('#car')
            var heart:any = document.querySelector('#heart')

            car.style.bottom = pocition * 0.3 + 'px'
            
            
            
        }
        
        
        

    </script>
</section>

<style>
    .fixxer{
        width: 15rem;
        position: fixed;
        display: flex;

        bottom: 20px;
        right: 0;
        z-index: 10000;
        filter: drop-shadow(12px 10px 3px #0d0e0d);
        cursor: pointer;
        padding: 1.5rem 4rem;
        transition: all 500ms ease-in-out;
    }
    .fixxer:hover{
        transform: scale(110%);
    }
    .header{
        background-image: url(../../public/imgs/header.jpeg);
        background-repeat: no-repeat;
        background-size: cover;
        height: 50rem;
        
        animation-duration: 10s;
        
    }
    .img_primary{
        width: 100%;
        height: 55rem;
    }

    @keyframes hola{
        0%{
            transform: scale(100%);
        }
        100%{
            transform: scale(110%);
        }
    }
</style>