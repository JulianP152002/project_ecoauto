---
import { Image } from "astro:assets";
import Car from "../../public/imgs/M3COMPETITON.webp";

---

<section
    class="header overflow-hidden p-10 z-0 relative m-auto w-full h-full flex justify-center items-center"
>
    <div class="flex flex-col items-center justify-center">
        <h2
            class="mb-8 mt-12 text-7xl font-bold text-yellow-400 flex items-center content-center"
        >
            NUESTROS SERVICIOS
        </h2>
        <h4 class="mb-16 text-6xl text-center text-balance font-semibold text-yellow-50">
            La mejor Revision Tecnicomecanica con el Mejor Equipo
        </h4>
        <a href="">
            <button
                class="rounded-3xl text-2xl hover:scale-110 hover:shadow-2xl transition ease-in-out duration-300  px-8 py-6"
            >
                Cotiza tu Revision
            </button>
        </a>
    </div>

    <div class="content_right">
        <div class="content-right_horario">
            <h3 class="horario_title">Abierto</h3>
            <p class="horario_days mt-1">
                Lun-Vie <span class="horario_hour horario_hour-1"
                    >07:00AM-07:00PM</span>
            </p>
            <p class="horario_days mt-1">
                Sabados <span class="horario_hour horario_hour-1"
                    >07:00AM-06:00PM</span>
            </p>
            <p class="horario_days mt-1">
                Domin-Fest<span class="horario_hour horario_hour-1"
                    >08:00AM-03:00 PM</span>
            </p>
        </div>
        <Image
            class="content-right_img"
            src={Car}
            id="car"
            alt="imagen vehiculo"
        />
    </div>

    <script>


        window.onscroll = function hola(): any {
            var pocition =
                window.scrollY;
            var car: any = document.querySelector("#car");

            car.style.bottom = pocition * 0.2 + "px";
        };
    </script>
</section>

<style>
    button{
        background-color: #FFE53B;
        background-image: linear-gradient(147deg, #FFE53B 0%, #ae8325 74%);



    }
    .header {
        background-image: url(../../public/imgs/header.png);
        background-repeat: no-repeat;
        background-size: cover;
        height: 58rem;

        animation-duration: 10s;
    }
    .img_primary {
        width: 100%;
        height: 55rem;
    }

    @keyframes hola {
        0% {
            transform: scale(100%);
        }
        100% {
            transform: scale(110%);
        }
    }
    .content_right {
        flex-basis: 40%;
        font-size: 15px;
        align-items: right;
        margin-right: 8rem;
        color: #fff;
    }



    .content-right_horario {
        font-size: 1.2rem;
        position: absolute;
        height: 12rem;
        padding: 1rem 2rem 9rem 1rem;
        margin-top: -8rem;
        background:#fff;
        border-radius: 10px;
        color: black;
        transition: all 300ms ease-in-out;
        animation-name: Horario;
        animation-duration: 2s;
    }

    @keyframes Horario {
        0% {
            opacity: 0;
        }

        50% {
            opacity: 0.5s;
        }

        100% {
            opacity: 1;
        }
    }

    .horario_title {
        margin-left: 2rem;
        font-style: 7rem;
        font-weight: 700;
    }

    .horario_title::before {
        content: "";
        position: absolute;
        width: 1rem;
        height: 1rem;
        background-color: #008e13;
        border-radius: 50px;
        left: 17px;
        top: 14px;
    }

    .horario_days {
        color: gray;
    }

    .horario_hour {
        color: black;
        font-weight: 500;
    }

    .horario_hour-1 {
        margin-left: 1.5rem;
    }

    .content-right_img {
        width: 700px;
        position: absolute;
        display: block;
        right: -25rem;
        bottom: -7rem;
        transition: all 300ms ease-in-out;
        animation-name: BMW;
        animation-duration: 1.8s;
    }

    @keyframes BMW {
        0% {
            transform: translateX(100%);
            opacity: 0;
        }
        100% {
            transform: translateX(0%);
            opacity: 1;
        }
    }
</style>
