---
import Image from "astro/components/Image.astro";
import Layout from "../../layouts/Layout.astro";
import Nav from "../../sections/Nav.astro";
import Footer from "../../sections/Footer.astro";
import Whasap from "../../sections/whasap.astro";

import Esp from "../../../public/imgs/especial.jpg";
import Tax from "../../../public/imgs/taxipre.jpg";
import logue from "../../../public/imgs/logo.jpg";
import Par from "../../../public/imgs/particular.jpg";

---

<Layout  description="Revisiones Preventivas en Cda Ecoato Tunja-Boyaca" title=" Cda ecoauto te hace saber precio de revisiones preventivas de vehiculos particulares, publicos y de servicio especial">
    <main class=" relative" >
        <Nav></Nav>
        <script>
           
			const mobilebtn = document.querySelector(".btn");
			const mobilmenu = document.querySelector("#menu");

			mobilebtn.addEventListener("click", () => {
				let show = document.querySelector(".show");

				if (show) {
					mobilmenu.classList.remove("show");
					mobilmenu.classList.add("menu");
				} else {
					mobilmenu.classList.add("show");
					mobilmenu.classList.remove("menu");
				}
			});
	
		</script>
        <Whasap></Whasap>
        <section class=" m-auto h-auto flex flex-col relative w-full" >
            <header class="bg-black w-full mt-10 h-[30rem] flex flex-col ">
                <h1 class=" text-fuchsia-50 pt-12 m-auto text-7xl items-center flex font-bold " >
                    Revision Preventiva
                </h1>
                <h3 class="m-auto -mt-32 text-4xl text-white" >Contigo somos lideres en el mercado</h3>
            </header> 
            <section class=" py-24 flex content-start mx-20 items-center md:grid md:grid-cols-2 sm:flex sm:flex-col sm:m-auto sm:px-5 sm:py-28 sm:w-ful " >
                <di class=" relative  rounded-2xl px-12  m-auto sm:mb-8 ">   
                    <div class=" w-full rounded-4xl overflow-hidden h-full  basis-1/3">
                        <Image title=" revision preventiva para vehiculos particulares ciudad de tunja cda ecoauto" class="w-full overflow-hidden rounded-3xl hover:scale-110 transition-all" src={Par} alt="imagen de carro" ></Image>
                    </div>
                    <div class=" hover:scale-110 absolute  block top-0 rounded-full overflow-hidden w-[6rem]">
                        <Image title="logo cda ecoauto tunja" class="" src={logue} alt="logo cda ecoauto" ></Image>
                    </div>
                    <div class=" flex text-center items-center flex-col m-auto md:mb-5">
                        <h1 class=" m-auto w-full mb-5 font-bold text-3xl">RP – Automoviles Particulares</h1>
                        <h4 class=" font-normal text-gray-700 text-2xl" >Revisión técnico mecánica, Automovil particular</h4>
                        <span class=" font-semibold text-2xl">$15.000</span>
                    </div>
                </di>
                <di class=" relative  rounded-2xl px-12  m-auto sm:mb-8 ">   
                    <div class=" w-full rounded-4xl overflow-hidden h-full  basis-1/3">
                        <Image title=" revision preventiva vehiculos de servicio especial en cda ecoauto tunja" class="w-full overflow-hidden rounded-3xl hover:scale-110 transition-all" src={Esp} alt="imagen de carro" ></Image>
                    </div>
                    <div class=" hover:scale-110 absolute  block top-0 rounded-full overflow-hidden w-[6rem]">
                        <Image title="logo cda ecoauto tunja" class="" src={logue} alt="logo cda ecoauto" ></Image>
                    </div>
                    <div class=" flex text-center items-center flex-col m-auto">
                        <h1 class=" m-auto w-full mb-5 font-bold text-3xl">RP – Automoviles Servicio Especial</h1>
                        <h4 class=" font-normal text-gray-700 text-2xl" >Revisión técnico mecánica, Automovil particular</h4>
                        <span class=" font-semibold text-2xl">$15.500</span>
                    </div>
                </di>
                <di class=" relative rounded-2xl px-12  m-auto sm:mb-8 ">   
                    <div class=" w-full rounded-4xl overflow-hidden h-full  basis-1/3">
                        <Image title=" revision preventiva vehiculos particular en cda ecoauto tunja"  class="w-full overflow-hidden rounded-xl hover:scale-110 transition-all" src={Tax} alt="imagen de carro" ></Image>
                    </div>
                    <div class=" hover:scale-110 absolute  block top-0 rounded-full overflow-hidden w-[6rem]">
                        <Image title="logo cda ecoauto tunja"  src={logue} alt="logo cda ecoauto" ></Image>
                    </div>
                    <div class=" flex text-center items-center flex-col m-auto">
                        <h1 class=" m-auto w-full mb-5 font-bold text-3xl">RTM – Automóviles Públicos</h1>
                        <h4 class=" font-normal  text-gray-700 text-2xl" >Revisión técnico mecánica, Automovil público</h4>
                        <span class=" font-semibold text-2xl">$15.000</span>
                    </div>
                </di>
                


        
            </section>
        </section>    
        <Footer></Footer>
    </main>
</Layout>